form#login h2{padding:5px 10px 5px 10px;font-weight:400;width:50%;margin:0 0 3px 0;}

form#login{

	 margin:50px auto;text-align:left;	
	 font-family:"Century Gothic",Helvetica,Arial,sans-serif;

	 font-size:0.95em;

	
 margin:50px auto;

	 width:500px;
	

	-webkit-border-radius: 15px;

	-moz-border-radius: 15px;
	
	-khtml-border-radius: 15px;

	 border-radius: 15px;

	 
	
	 box-shadow: 0 0 18px rgba(0,0,0,.2);

	-moz-box-shadow: 0 0 18px rgba(0,0,0,.2);

	-webkit-box-shadow: 0 0 18px rgba(0,0,0,.2);


	 padding: 0px;
	 
	 background:transparent;


	 
}


form#login h3{font-size:150%;
margin:15px;}

input.hidden{display:none;}

form#login div#branding 
	{



	padding-right:15px;
	padding-bottom:15px;
	background:#ccc url(../img/login/uon-logo-32h-greybg.gif) no-repeat scroll 95% 50%;

	color:#263F57;

	
font-size:150%;

	font-weight:400;

	height:40px;

	margin-bottom:0;


	width:485px;

	margin-top:0;

	vertical-align:middle;

	border-bottom:5px solid #1b3f59;


	-moz-border-radius:15px 15px 0 0;

	border-radius:15px 15px 0 0;

	-webkit-border-top-right-radius:15px;
	-webkit-border-top-left-radius:15px;

	-webkit-border-bottom-right-radius:0;

	-webkit-border-bottom-left-radius:0;


}


form#login h4{
	background:#FFFFFF none repeat scroll 0 0;

	border-top:1px solid #DDDDDD;
	
color:#263F57;

	display:block;

	font-size:225%;
	
font-weight:400;

	line-height:220%;

	margin:0;

	padding-left:15px;

	width:485px;

}




form#login input{
	
margin:5px 0px;

	display:block;
	
border:3px solid #CCCCCC;

	height:30px;
	
width:95%;
	

-moz-border-radius:5px;
	
-webkit-border-radius: 5px;

	-khtml-border-radius: 5px;

}



form#login input:focus{

	margin:5px 0px;
	
display:block;
	
border:3px solid #B9CC71;
	
height:30px;

	width:95%;
	
-moz-border-radius-bottomleft:5px;
	
-moz-border-radius-bottomright:5px;
	
-moz-border-radius-topleft:5px;
	
-moz-border-radius-topright:5px;

}



form#login input.btn{
	clear:both; /* background for btn */
	

background:#8AB039 url(../img/login/btn.png) no-repeat scroll -10px -3px;

color:#FFFFFF;
	
float:right;
	
margin-right:20px;
	width:112px;
	
font-size:1em;

	text-shadow:0 1px #CCCCCC;
	
height:40px;
	
margin-bottom:20px;
}



form#login input.hidden{
	display:none;
	border:0;
	margin:0;
	padding:0;
}


form#login input#rememberme{
	display:inline-block;
	
vertical-align:middle;
	margin-right:5px;

	width:15px;
	border:0;
	height:35px;
}



form#login fieldset{
	width:95%;
	background:#fff;
	margin:0;
	padding:0 0 0 15px;
	border:0;
	
-webkit-border-bottom-left-radius: 15px;
	
-webkit-border-bottom-right-radius: 15px;
	-moz-border-radius-bottomright: 15px;

	-moz-border-radius-bottomleft:  15px;

	 border-bottom-left-radius: 15px;

	 border-bottom-right-radius: 15px;
}



form#login p.extra{
	clear:both;
}

form#login p.error{
	margin:0;
	padding:0;
	clear:both;
	color:#ff0000;
	font-weight:bold;
}


form#login label{
	display:inline-block;
	vertical-align:middle;
}

form#login 
a,a:link,a:visited,a:hover{
	text-decoration:none;
	color:#2C3F55;
}


div#logoff{
	font-family:"Century Gothic",Helvetica,Arial,sans-serif;

	font-size:0.95em;
	
width:500px;
	margin:50px auto;
	text-align:left;
}


